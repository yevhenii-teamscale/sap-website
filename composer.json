{
    "name": "avologi/site-api",
    "description": "A REST API application for the inventory checking based on Slim Framework",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/avologi/site-inventory-usa.git",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Agranov"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "dyorg/slim-token-authentication": "^0.3.3",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
